  source http://ftp.gnu.org/gnu/coreutils/coreutils-8.31.tar.xz

<configure>

  ./configure              \
    --prefix=/tools        \
    --enable-install-program=hostname;

<compile>
  make -j [NPROC];

<install>
  make DESTDIR=[XYZ] install;

<desc>
  Coreutils;
