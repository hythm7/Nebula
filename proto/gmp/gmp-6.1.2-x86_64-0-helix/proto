<proto>
  star gmp-6.1.2-x86_64-0-helix
  source http://ftp.gnu.org/gnu/gmp/gmp-6.1.2.tar.xz

<configure>

  ./configure                        \
    --prefix=/usr                    \
    --enable-cxx                     \
    --disable-static                 \
    --docdir=/usr/share/doc/gmp-6.1.2;

<compile>
  make -j [NPROC];

<install>
  make DESTDIR=[XYZ] install;

<desc>
  gmp.
