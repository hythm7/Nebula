<proto>
star gcc-9.1.0-x86_64-0-helix
source http://ftp.gnu.org/gnu/gcc/gcc-9.1.0/gcc-9.1.0.tar.xz
builddir build

<configure>
--prefix                        /tools
--with-glibc-version            2.11
--with-sysroot                  /home/hythm/galaxy-linux
--with-local-prefix             /tools
--with-native-system-header-dir /tools/include
--enable-languages              c,c++
--target                        x86_64-galaxy-linux-gnu
--without-headers
--with-newlib
--disable-nls
--disable-shared
--disable-multilib
--disable-decimal-float
--disable-threads
--disable-libatomic
--disable-libgomp
--disable-libquadmath
--disable-libssp
--disable-libvtv
--disable-libstdcxx

<make>
cmd make

<install>
cmd make

<desc>
GCC.
