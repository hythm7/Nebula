<proto>
  star expat-2.2.7-x86_64-0-helix
  source https://prdownloads.sourceforge.net/expat/expat-2.2.7.tar.xz

<configure>

  sed -i 's|usr/bin/env |bin/|' run.sh.in;
  
  ./configure                           \
    --prefix=/usr                       \
    --disable-static                    \
    --docdir=/usr/share/doc/expat-2.2.7;

<compile>
  make -j [NPROC];

<install>
  make DESTDIR=[XYZ] install;

<desc>
  expat.
