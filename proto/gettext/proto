<proto>
  star gettext-0.20.1-x86_64-0-helix
  source http://ftp.gnu.org/gnu/gettext/gettext-0.20.1.tar.xz

<configure>

  ./configure                             \
    --prefix=/usr                         \
    --disable-static                      \
    --docdir=/usr/share/doc/gettext-0.20.1;


<compile>
  make -j [NPROC];

<install>
  make DESTDIR=[XYZ] install;
  chmod -v 0755 [XYZ]/usr/lib/preloadable_libintl.so;


<desc>
  gettext.
