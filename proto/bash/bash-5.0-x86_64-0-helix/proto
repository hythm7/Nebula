<proto>
  star bash-5.0-x86_64-0-helix
  source http://ftp.gnu.org/gnu/bash/bash-5.0.tar.gz

<configure>

  ./configure                        \
    --prefix=/usr                    \
    --docdir=/usr/share/doc/bash-5.0 \
    --with-installed-readline        \
    --without-bash-malloc;

<compile>
  make -j [NPROC];

<install>
  make DESTDIR=[XYZ] install;
  
  mkdir [XYZ]/bin;
  mv -vf [XYZ]/usr/bin/bash [XYZ]/bin;

<desc>
  Bash is the GNU Project's shell.
