<proto>
  star bc-1.07.1-x86_64-0-helix
  source http://ftp.gnu.org/gnu/bc/bc-1.07.1.tar.gz

<configure>

  ./configure                 \
    --prefix=/tools           \
    --with-readline           \
    --mandir=/usr/share/man   \
    --infodir=/usr/share/info;

<compile>
  make -j [NPROC];

<install>
  make DESTDIR=[XYZ] install;

<desc>
  bc.
