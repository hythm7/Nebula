<proto>
  star binutils-2.32-x86_64-0-helix
  source http://ftp.gnu.org/gnu/binutils/binutils-2.32.tar.xz

<configure>
  mkdir build;
  cd build;

  FORCE_UNSAFE_CONFIGURE=1
  DEFAULT_POSIX2_VERSION=199209
  ../configure \
  --prefix=/tools \
  --with-sysroot=/home/hythm/galaxy-linux \
  --with-lib-path=/tools/lib \
  --target=[GALAXY] \
  --disable-nls \
  --disable-werror;

<compile>
  cd build;
  make -j [NPROC];

<install>
  cd build;
  make DESTDIR=[XYZ] install;

<desc>
  Binutils.
