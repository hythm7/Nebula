<proto>
  star pkg-config-0.29.2-x86_64-0-helix
  source https://pkg-config.freedesktop.org/releases/pkg-config-0.29.2.tar.gz

<configure>

  ./configure                                \
    --prefix=/usr                            \
    --with-internal-glib                     \
    --disable-host-tool                      \
    --docdir=/usr/share/doc/pkg-config-0.29.2;

<compile>
  make -j [NPROC];

<install>
  make DESTDIR=[XYZ] install;

<desc>
  pkg-config.
