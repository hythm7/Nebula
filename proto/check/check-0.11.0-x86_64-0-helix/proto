<proto>
  star check-0.11.0-x86_64-0-helix
  source https://github.com/libcheck/check/releases/download/0.11.0/check-0.11.0.tar.gz

<configure>

  ./configure    \
    --prefix=/usr;

<compile>
  make -j [NPROC];

<install>
  make DESTDIR=[XYZ] docdir=/usr/share/doc/check-0.11.0 install;
  sed -i '1 s/tools/usr/' [XYZ]/usr/bin/checkmk;

<desc>
  check.
