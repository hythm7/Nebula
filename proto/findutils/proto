<proto>
  star findutils-4.6.0-x86_64-0-helix
  source http://ftp.gnu.org/gnu/findutils/findutils-4.6.0.tar.gz

<configure>

  ./configure --prefix=/usr --localstatedir=/var/lib/locate;

<compile>
  make -j [NPROC];

<install>
  make DESTDIR=[XYZ] install;
  mkdir [XYZ]/bin;
  mv -v [XYZ]/usr/bin/find [XYZ]/bin;
  sed -i 's|find:=${BINDIR}|find:=/bin|' [XYZ]/usr/bin/updatedb;

<desc>
  Findutils;
