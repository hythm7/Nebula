<proto>
  star git-2.22.0-x86_64-0-helix
  source https://www.kernel.org/pub/software/scm/git/git-2.22.0.tar.xz

<configure>

  ./configure                       \
    --prefix=/tools                 \
    --with-gitconfig=/etc/gitconfig ;

<compile>
  make -j [NPROC];

<install>
  make DESTDIR=[XYZ] install;

<desc>
  git.
