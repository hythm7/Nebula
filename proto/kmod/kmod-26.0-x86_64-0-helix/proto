<proto>
  star kmod-26.0-x86_64-0-helix
  source https://www.kernel.org/pub/linux/utils/kernel/kmod/kmod-26.tar.xz
srcdir kmod-26

<configure>

  ./configure              \
    --prefix=/usr          \
    --bindir=/bin          \
    --sysconfdir=/etc      \
    --with-rootlibdir=/lib \
    --with-xz              \
    --with-zlib;

<compile>
  make -j [NPROC];

<install>
  make DESTDIR=[XYZ] install;

  mkdir [XYZ]/sbin;

  for target in depmod insmod lsmod modinfo modprobe rmmod
    do
      ln -sfv ../bin/kmod [XYZ]/sbin/$target
  done;

ln -sfv kmod [XYZ]/bin/lsmod;

<desc>
  kmod.
